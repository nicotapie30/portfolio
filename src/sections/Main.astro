---
import LinkButton from '@/components/LinkButton.astro';
import { SendEmail, Linkedin, Github } from '@/assets/index.js';
import ImagesMainLeft from '@/components/ImagesMainLeft.astro';
import ImagesMainRight from '@/components/ImagesMainRight.astro';
---

<main class="flex w-full lg:w-[50%] mx-auto relative justify-center">
  <ImagesMainLeft
    src="/JavaScript.svg"
    alt="JavaScript"
    class="w-16 2xl:w-20 -left-55 top-60 animate-delay-400 animate-pulse-fade-in"
  />

  <ImagesMainLeft
    src="/Astro.svg"
    alt="Astro"
    class="w-16 2xl:w-20 -left-49 top-96 animate-pulse-fade-in animate-delay-500"
  />

  <ImagesMainLeft
    src="/Css.svg"
    alt="Css"
    class="w-16 2xl:w-20 -left-85 top-50 animate-pulse-fade-in animate-delay-300"
  />

  <ImagesMainLeft
    src="/Vite.svg"
    alt="Vite"
    class="w-16 2xl:w-20 -left-80 top-100 animate-pulse-fade-in animate-delay-100"
  />

  <div class="flex flex-col items-center">
    <section
      class="flex flex-col items-center md:flex md:flex-row md:items-center gap-4 mt-32 md:mt-72"
    >
      <div
        class="w-20 h-20 lg:w-44 lg:h-44 ml-6 self-start lg:self-auto rounded-full animate-fade-in animate-delay-100"
      >
        <img
          src="/nico.webp"
          alt="Imágen de Nico"
          class="w-full h-full rounded-full object-cover"
        />
      </div>
      <div class="w-[20rem] md:w-[40rem]">
        <h1
          class="font-onest-bold text-2xl text-center md:text-start md:text-5xl text-white mb-6 animate-fade-in-up"
        >
          Hola! Soy Nicolás Tapié
        </h1>
        <p
          class="text-white prose font-onest text-base md:text-lg md:text-start text-center animate-fade-in-up animate-delay-400"
        >
          Técnico Superior en Programación apasionado por el Desarrollo de
          Software 👨🏻‍💻, con <strong class="text-amber-200"
            >3 años de experiencia en la industria</strong
          >. Me especializo en <strong class="text-amber-200"
            >Desarrollo Web.</strong
          >
        </p>
      </div>
    </section>
    <section class="flex gap-4 mt-6 mb-20 md:mb-40">
      <LinkButton title="Contactame" href="mailto:nicoatapie@gmail.com">
        <SendEmail />
      </LinkButton>
      <LinkButton
        title="Linkedin"
        href="https://www.linkedin.com/in/nicolasatapiedev30/"
      >
        <Linkedin />
      </LinkButton>
      <LinkButton title="Github" href="https://github.com/nicotapie30">
        <Github />
      </LinkButton>
    </section>
  </div>

  <ImagesMainRight
    src="/Html.svg"
    alt="Html"
    class="w-16 2xl:w-20 -right-45 top-60 animate-pulse-fade-in animate-delay-160"
  />

  <ImagesMainRight
    src="/Tailwindcss.svg"
    alt="Tailwindcss"
    class="w-16 2xl:w-20 -right-40 top-96 animate-pulse-fade-in animate-delay-400"
  />

  <ImagesMainRight
    src="/React.svg"
    alt="React"
    class="w-16 2xl:w-20 -right-75 top-52 animate-pulse-fade-in animate-delay-300"
  />

  <ImagesMainRight
    src="/Nodejs.svg"
    alt="Nodejs"
    class="w-16 2xl:w-20 -right-60 top-102 animate-pulse-fade-in animate-delay-500"
  />
</main>
