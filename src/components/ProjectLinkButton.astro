---
import ArrowRight from '@/assets/ArrowRight.svg';
const { href } = Astro.props;
---

<a
  aria-label="Visitar proyecto"
  href={href}
  target="_blank"
  class="flex justify-center text-xs md:text-base text-nowrap w-auto h-8 md:h-12 group gap-1.5 shadow-md hover:shadow-xl duration-300 items-center opacity-0 group-hover:opacity-100 group-focus-within:opacity-100 bg-gray-800/30 backdrop-blur-2xl border font-onest transition-all border-gray-300 text-white py-2 px-2.5 rounded-xl cursor-pointer hover:text-gray-900 hover:bg-white/95 focus:text-gray-900 focus:bg-white/95"
>
  Visitar proyecto
  <ArrowRight class="w-5" />
</a>
